<%= form_for(@recipe) do |f| %>
  <div class="row">
    <div class="span8">
      <% if @recipe.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

          <ul>
          <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :title, "Recipe Title" %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :introduction, "Recipe Introduction" %>
        <%= f.text_area :introduction %>
      </div>
      <div class="field">
        <%= f.label :preperation, "Preperation Steps" %>
        <%= f.text_area :preperation %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <div class="field float-left clear-left">
        <%= f.label :cooking_time, "Total time (prep time + cooking time)" %>
        <%= f.text_field :cooking_time %><i class="form-explain">minutes</i>
      </div>
      <div class="field float-left clear-left">
        <%= f.label :pots, "Number of pots and/or pans required" %>
        <%= select_tag(:pots, options_for_select([['No Pot', "No Pot"], ['1 Pot', "1 Pot"], ['2 Pots', "2 Pots"], ['2+ Pots', "2+ Pots"]])) %>
      </div>
      <div class="field float-left clear-left">
        <%= f.label :equipment, "Required Equipment" %>
        <%= f.text_field :equipment %><i class="form-explain">i.e. 1 Pot, 1 Spatula</i>
      </div>
      <div class="field float-left clear-left">
        <%= f.label :servings %>
        <%= f.text_field :servings %><i class="form-explain">Person/s</i>
      </div>
      <div class="field float-left clear-left">
        <%= f.label :picture %>
        <%= f.text_field :picture %><i class="form-explain">Optional</i>
      </div>
      <div class="field float-left clear-left">
        <%= f.label :weight, "Approximate weight of all ingredients" %>
        <%= f.text_field :weight %><i class="form-explain">Optional</i>
      </div>
      <div class="field float-left clear-left">
        <%= f.label :calories, "Total approximate calories per person" %>
        <%= f.text_field :calories %><i class="form-explain">Optional</i>
      </div>
    </div>
    <div class="span2">
      <%= f.fields_for :categories do |category| %>
        <%= category.check_box_tag(:name), class: "float-left clear-left add-check-box" %>
        <%= category.label_tag(:name) %>
      <% end %>
    </div>
  </div>
  <div class="actions clear-left">
    <%= f.submit %>
  </div>
<% end %>
